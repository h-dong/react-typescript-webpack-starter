{
    "name": "react-typescript-webpack-starter",
    "version": "1.0.0",
    "description": "A skeleton app with build, test, lint all set up only to a minimal and basic level.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hdong92/react-typescript-webpack-starter.git"
    },
    "keywords": [
        "React",
        "Jest",
        "Enzyme",
        "tslint",
        "Typescript"
    ],
    "author": "Hao Dong (dong_hao@hotmail.co.uk)",
    "homepage": "https://github.com/hdong92/react-typescript-webpack-starter",
    "sideEffects": false,
    "scripts": {
        "dev": "webpack-dev-server --open --config ./webpack.dev.js",
        "build": "npm run lint && npm run test:build && webpack --config ./webpack.prod.js",
        "test": "jest --watch",
        "test:build": "jest",
        "lint": "tslint -c tslint.json \"src/**/*.tsx\"",
        "lint:fix": "tslint --fix -c tslint.json \"src/**/*.tsx\""
    },
    "dependencies": {
        "react": "^16.4.1",
        "react-dom": "^16.4.1"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.10",
        "@types/jest": "^23.1.0",
        "@types/react": "^16.3.17",
        "@types/react-dom": "^16.0.6",
        "clean-webpack-plugin": "^0.1.19",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.1.0",
        "react-test-renderer": "^16.4.1",
        "ts-jest": "^22.4.6",
        "ts-loader": "^4.4.1",
        "tslint": "^5.10.0",
        "tslint-react": "^3.6.0",
        "typescript": "^2.9.2",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.7",
        "webpack-dev-server": "^3.1.4",
        "webpack-merge": "^4.1.3"
    }
}
